@model PersonalSite02.Models.ContactViewModel

@{
    ViewData["Title"] = "Contact";
}
<br />
<br />
<br />
<br />
<section id="contact">
    <div class="container wow bounceIn">
        <header class="text-center mb-5">
            <h2 class="heading">Contact me</h2>
            <br/>
            <br/>
        <p class="lead text-muted wow fadeInUp" data-wow-delay="0.1s">I would like to hear from you!</p>
        </header>
        <div class="row">
            <div class="col-lg-7 mx-auto">
                <form asp-action="Contact">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row gy-3">
                        <div class="col-lg-6">
                            <input asp-for="Name" class="form-control" placeholder="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-lg-6">
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-lg-6">
                            <input asp-for="Subject" class="form-control" placeholder="Subject" />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>
                        <div class="col-lg-12">
                            <textarea asp-for="Message" rows="7" name="message" class="form-control" placeholder="message for me *"></textarea>
                            <span asp-validation-for="Message"></span>
                        </div>
                        <div class="col-12 text-center">
                            <button class="btn btn-outline-primary" type="submit">Send message</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
